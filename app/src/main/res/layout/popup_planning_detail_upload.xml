<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="243dp"
    android:layout_height="wrap_content"
    android:layout_margin="45dp"
    android:background="@drawable/radius_planning_white_popup"
    android:elevation="40dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancelBtn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/cancel_btn" />

    <TextView
        android:id="@+id/popupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="장소 등록"
        android:textColor="#B9B9B9"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="서울숲"
        android:textColor="#4F5A80"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/visitTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="예상도착시간"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/timeSpinner"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:background="@drawable/planning_place_detail_popup_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예상비용"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/priceSpinner"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/planning_place_detail_popup_time"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/planning_detail_save_btn"
        android:fontFamily="@font/inter"
        android:text="등록"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
</LinearLayout>