<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="225dp"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:background="@drawable/poke_background"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_anchorGravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_horizontal"
        android:text="쿸 찌르기"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pokeMessage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/poke_list_one_line_review"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="center_vertical"
        android:hint="짧은 메시지를 입력해주세요."
        android:inputType="text"
        android:maxLength="50"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:textColorHint="#C0C0C0"
        android:textSize="11sp" />

    <Button
        android:id="@+id/addPokeBtn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/poke_list_round_btn"
        android:text="찌르기"
        android:textColor="#FFFFFF" />
</LinearLayout>