<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="33dp"
    android:paddingRight="25dp"
    android:paddingBottom="33dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/back_btn_small" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MyPage"
            android:textColor="#4F5A80"
            android:textSize="21sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="15dp"
            android:layout_height="18dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_imageView"
                android:layout_width="175dp"
                android:layout_height="166dp"
                android:layout_gravity="center"
                android:layout_marginTop="66dp"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:scaleType="center"
                app:srcCompat="@drawable/profile_photo_mypage" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="서정후"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="jeonghu1010@naver.com"
                android:textColor="#C0C0C0 "
                android:textSize="13sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="7.5dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/mypage_center_rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="7dp">

                        <TextView
                            android:id="@+id/pointTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="9dp"
                            android:text="나의 포인트"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/pointNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,000P"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp">

                        <TextView
                            android:id="@+id/tripPlanTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:text="여행 계획"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tripPlanNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="7dp">

                        <TextView
                            android:id="@+id/tripReivewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:text="여행 기록"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tripReviewNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:text="계정"
                        android:textColor="#878787 "
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/mypage_user_box"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_ModifyBtn"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginLeft="27dp"
                            android:gravity="center_vertical"
                            android:text="정보 수정"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/logoutBtn"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginLeft="27dp"
                            android:gravity="center_vertical"
                            android:text="로그아웃"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_ModifyBtn2"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginLeft="27dp"
                            android:gravity="center_vertical"
                            android:text="회원 탈퇴"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tripTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="여행"
                    android:textColor="#878787 "
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/mypage_trip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/trip_planBtn"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginLeft="27dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="여행 계획"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tripPlanNum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mypage_trip_num"
                            android:gravity="center"
                            android:text="1개"
                            android:textColor="#F0F6FF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/trip_reviewBtn"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginLeft="27dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="여행 기록"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tripReviewNum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mypage_trip_num"
                            android:gravity="center"
                            android:text="3개"
                            android:textColor="#F0F6FF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/likeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="좋아요"
                    android:textColor="#878787 "
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/mypage_trip"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tripLikeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginLeft="27dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="여행 코스"
                        android:textSize="16sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/MeetUpTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="매칭글"
                    android:textColor="#878787 "
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="@drawable/mypage_poke"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/MeetUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="내가 쓴 매칭 글"
                        android:textSize="16sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>